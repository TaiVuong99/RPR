<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/textMoney"
        android:textColor="#FFC107"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <ImageView
        android:layout_toRightOf="@id/textMoney"
        android:layout_marginTop="40dp"
        android:src="@drawable/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="25dp"
        android:thumb="@drawable/pichu"
        android:layout_above="@id/pokemon1"
        android:id="@+id/pokemonMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <SeekBar
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="25dp"
        android:thumb="@drawable/squirtle"
        android:layout_above="@id/pokemon2"
        android:id="@+id/pokemon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <SeekBar
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:thumb="@drawable/fushigidane"
        android:layout_alignParentBottom="true"
        android:id="@+id/pokemon2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>